<Window x:Class="SharpPoster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Margin="5" Name="tbUrl" KeyDown="tbUrl_KeyDown" />
        <TextBox Margin="5" Grid.Row="1" IsReadOnly="True" IsReadOnlyCaretVisible="True" Name="tbResponse" />
    </Grid>
</Window>
